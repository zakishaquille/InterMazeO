<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amanda.uts.inter_maze_o.MainActivity">

    <view
        android:id="@+id/view"
        class="com.amanda.uts.inter_maze_o.GameView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.amanda.uts.inter_maze_o.GameView
        android:id="@+id/gameView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />
</androidx.constraintlayout.widget.ConstraintLayout>

<!--
    1)  Go to Design Mode and from Pallete drop <view> onto the layout (choose
        GameView)
    2)  To make GameView cover whole screen:
            1) Stretch all 4 circles to the screen edges.
            2) Reclick the blue arrows in Constrain Widget until it's on 'Match
                Constrains'.
            3) Set margins to 0 if it's not set by default
-->